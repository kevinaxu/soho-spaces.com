<html>
<head>
    {{> head}}
</head>
<body class="bg-stone-300 text-gray-900" style="font-family: 'Comfortaa'">
    {{> navbar}}

    {{> heroMedia}}

    <!-- Project Overview -->
    <div class="px-4 py-8 md:px-0 md:mt-8 md:mx-auto md:max-w-4xl">
        <div class="py-2">
            <h1 class="text-2xl md:text-4xl font-bold text-gray-900 italic inline align-bottom lowercase pr-2 md:pr-4" style="font-family: 'Homemade Apple'">{{ content.title1 }}</h1>
            <span class="md:hidden"><br></span>
            <div class="text-xl md:text-4xl h-full inline lowercase">{{ content.title2 }}</div>
        </div>
        {{#content.intro.paragraphs}}
        <div class="py-2">
            <p class="leading-relaxed md:text-lg md:leading-loose">{{ . }}</p>
        </div>
        {{/content.intro.paragraphs}}
    </div>

    <!-- Before / After -->
    {{#beforeAfter}}
        {{> beforeAfter}}
    {{/beforeAfter}}

    <!-- The Details -->
    <div class="px-4 pt-8 md:pb-2 md:px-0 md:mt-8 md:mx-auto md:max-w-4xl">
        <div class="py-2">
            <div class="text-xl md:text-4xl pr-2 h-full inline">the</div>
            <h1 class="text-2xl md:text-4xl font-bold text-gray-900 italic inline align-bottom pr-2" style="font-family: 'Homemade Apple'">details</h1>
        </div>
    </div>

    <!-- Photo Grid  -->
    {{> photoGrid}}

    {{> photoCarouselModal}} 

    <!-- The Story -->
    {{#content.story}}
        <div class="px-4 md:px-0 pb-16 md:mt-8 md:mx-auto md:max-w-4xl">
            <div class="py-2">
                <div class="text-xl md:text-4xl pr-2 h-full inline">the</div>
                <h1 class="text-2xl md:text-4xl font-bold text-gray-900 italic inline align-bottom pr-2" style="font-family: 'Homemade Apple'">story</h1>
            </div>
            {{#paragraphs}}
            <div class="py-2">
                <p class="leading-relaxed md:text-lg md:leading-loose">{{.}}</p>
            </div>
            {{/paragraphs}}
        </div>
    {{/content.story}}

    {{> footer}}

    <script src="/dist/app-bundle.js"></script>
</body>
</html>